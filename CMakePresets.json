{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            }
        },
        {
            "name": "default",
            "displayName": "Default (Debug)",
            "description": "Default configuration - Debug build with AddressSanitizer",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with AddressSanitizer",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "dev",
            "displayName": "Dev",
            "description": "Debug without sanitizers (faster)",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Dev"
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage",
            "description": "Coverage instrumentation build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Coverage"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "dev",
            "configurePreset": "dev"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage"
        }
    ]
}