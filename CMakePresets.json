{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "CC": "clang"
      }
    },
    {
      "name": "default",
      "displayName": "Default (Debug)",
      "description": "Default configuration - Debug build with system libc, clang, and all compatible sanitizers (ASan+UBSan+LSan+Integer+Nullability)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with system libc and sanitizers (ASan+UBSan+LSan) - same as default",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug-musl",
      "displayName": "Debug (musl - Linux only)",
      "description": "Debug build with musl - static linked, no sanitizers (incompatible with musl)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_MUSL": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Optimized static release build - automatically uses musl on Linux, vcpkg static on Windows",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_MIMALLOC": "ON",
        "ASCIICHAT_RELEASE_CPU_TUNE": "portable",
        "ASCIICHAT_RELEASE_ENABLE_FAST_MATH": "OFF"
      }
    },
    {
      "name": "release-musl",
      "displayName": "Release (musl)",
      "description": "Optimized static release build with musl explicitly enabled (Linux only)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_MUSL": "ON",
        "USE_MIMALLOC": "ON"
      }
    },
    {
      "name": "release-x86-64-v3",
      "displayName": "Release (x86-64-v3)",
      "description": "Release build targeting modern AVX2 CPUs",
      "inherits": "release",
      "cacheVariables": {
        "ASCIICHAT_RELEASE_CPU_TUNE": "x86-64-v3"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "description": "Optimized build with debug symbols (if you want to build and install ascii-chat yourself probably choose this to start)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "USE_MIMALLOC": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Dev",
      "description": "Debug without sanitizers (faster)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Dev"
      }
    },
    {
      "name": "dev-analyzers",
      "displayName": "Dev (Analyzers)",
      "description": "Debug build with static analyzers enabled (clang-tidy/cppcheck)",
      "inherits": "dev",
      "cacheVariables": {
        "ASCIICHAT_ENABLE_ANALYZERS": "ON"
      }
    },
    {
      "name": "coverage",
      "displayName": "Coverage",
      "description": "Coverage instrumentation build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Coverage"
      }
    },
    {
      "name": "tests",
      "displayName": "Tests (Debug)",
      "description": "Debug build with tests enabled (for running test suite)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "USE_CPACK": "OFF"
      }
    },
    {
      "name": "github",
      "displayName": "GitHub CI",
      "description": "Configuration used by GitHub Actions workflows (tests enabled, C23)",
      "inherits": "base",
      "binaryDir": "${sourceDir}/$env{GITHUB_CMAKE_BINARY_DIR}",
      "environment": {
        "GITHUB_CMAKE_BINARY_DIR": "build"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "CMAKE_C_STANDARD": "23",
        "CMAKE_C_FLAGS": "-std=c2x"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "debug-musl",
      "configurePreset": "debug-musl"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "release-x86-64-v3",
      "configurePreset": "release-x86-64-v3"
    },
    {
      "name": "release-musl",
      "configurePreset": "release-musl"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo"
    },
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "dev-analyzers",
      "configurePreset": "dev-analyzers"
    },
    {
      "name": "coverage",
      "configurePreset": "coverage"
    },
    {
      "name": "tests",
      "configurePreset": "tests"
    },
    {
      "name": "github",
      "configurePreset": "github"
    }
  ]
}
