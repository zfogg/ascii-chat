{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_STANDARD": "23",
        "CMAKE_CXX_STANDARD": "26"
      }
    },
    {
      "name": "base-debug",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_CPACK": "OFF",
        "ASCIICHAT_ENABLE_UNITY_BUILDS": "OFF",
        "ASCIICHAT_ENABLE_CTEST_DASHBOARD": "ON",
        "ASCIICHAT_USE_PCH": "ON",
        "ASCIICHAT_ENABLE_ANALYZERS": "OFF",
        "ASCIICHAT_RELEASE_KEEP_FRAME_POINTERS": "ON"
      }
    },
    {
      "name": "base-release",
      "inherits": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build_release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_MIMALLOC": "ON",
        "USE_CPACK": "ON",
        "ASCIICHAT_ENABLE_UNITY_BUILDS": "ON",
        "ASCIICHAT_RELEASE_ENABLE_FAST_MATH": "ON",
        "ASCIICHAT_ENABLE_CTEST_DASHBOARD": "OFF",
        "ASCIICHAT_ENABLE_ANALYZERS": "ON",
        "ASCIICHAT_RELEASE_KEEP_FRAME_POINTERS": "OFF"
      }
    },
    {
      "name": "default",
      "displayName": "Default (Debug)",
      "description": "Default configuration - Debug build with system libc, clang, and all compatible sanitizers (ASan+UBSan+LSan+Integer+Nullability)",
      "inherits": "base-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with system libc and sanitizers (ASan+UBSan+LSan) - same as default",
      "inherits": "base-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ASCIICHAT_ENABLE_ANALYZERS": "ON"
      }
    },
    {
      "name": "debug-musl",
      "displayName": "Debug (musl - Linux only)",
      "description": "Debug build with musl - static linked, no sanitizers (incompatible with musl)",
      "inherits": "base-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ASCIICHAT_ENABLE_ANALYZERS": "ON",
        "USE_MUSL": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Optimized static release build - automatically uses musl on Linux, vcpkg static on Windows",
      "inherits": "base-release"
    },
    {
      "name": "release-musl",
      "displayName": "Release (musl)",
      "description": "Optimized static release build with musl explicitly enabled (Linux only)",
      "inherits": "base-release",
      "cacheVariables": {
        "USE_MUSL": "ON"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "description": "Optimized build with debug symbols (if you want to build and install ascii-chat yourself probably choose this to start)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "USE_MIMALLOC": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Dev",
      "description": "Debug without sanitizers (faster)",
      "inherits": "base-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Dev"
      }
    },
    {
      "name": "coverage",
      "displayName": "Coverage",
      "description": "Debug build with coverage instrumentation enabled",
      "inherits": "base-debug",
      "cacheVariables": {
        "ASCIICHAT_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "tests",
      "displayName": "Tests (Debug)",
      "description": "Debug build with tests enabled (for running test suite)",
      "inherits": "base-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "USE_CPACK": "OFF"
      }
    },
    {
      "name": "github",
      "displayName": "GitHub CI",
      "description": "Configuration used by GitHub Actions workflows (tests enabled, coverage, C23)",
      "inherits": "base",
      "binaryDir": "${sourceDir}/$env{GITHUB_CMAKE_BINARY_DIR}",
      "environment": {
        "GITHUB_CMAKE_BINARY_DIR": "build"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_MUSL": "OFF",
        "BUILD_TESTS": "ON",
        "USE_CPACK": "OFF",
        "CMAKE_C_STANDARD": "23",
        "CMAKE_C_FLAGS": "-std=c2x",
        "ASCIICHAT_FORCE_CRITERION_TESTS": "ON",
        "ASCIICHAT_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "docker",
      "displayName": "Docker",
      "description": "Configuration for Docker container builds (tests enabled, C++20 for WebRTC AEC3 compatibility)",
      "inherits": "base-debug",
      "binaryDir": "${sourceDir}/build_docker",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "USE_CPACK": "OFF",
        "ASCIICHAT_FORCE_CRITERION_TESTS": "ON",
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "vs26",
      "inherits": "base",
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/build_vs",
      "toolset": "ClangCL"
    },
    {
      "name": "panic",
      "displayName": "Panic (Source Print Instrumentation)",
      "description": "Debug build with Source Print instrumentation - traces every executed statement to trace.log",
      "inherits": "base-debug",
      "binaryDir": "${sourceDir}/build_panic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ASCIICHAT_BUILD_WITH_PANIC": "ON",
        "ASCIICHAT_USE_PCH": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "debug-musl",
      "configurePreset": "debug-musl"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "release-musl",
      "configurePreset": "release-musl"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo"
    },
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "coverage",
      "configurePreset": "coverage"
    },
    {
      "name": "tests",
      "configurePreset": "tests"
    },
    {
      "name": "github",
      "configurePreset": "github"
    },
    {
      "name": "docker",
      "configurePreset": "docker"
    },
    {
      "name": "vs26",
      "configurePreset": "vs26"
    },
    {
      "name": "panic",
      "configurePreset": "panic"
    }
  ],
  "testPresets": [
    {
      "name": "base-test",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 0
      }
    },
    {
      "name": "unit",
      "displayName": "Unit Tests",
      "description": "Run unit tests only",
      "configurePreset": "default",
      "inherits": "base-test",
      "filter": {
        "include": {
          "label": "^unit$"
        }
      }
    },
    {
      "name": "integration",
      "displayName": "Integration Tests",
      "description": "Run integration tests only",
      "configurePreset": "default",
      "inherits": "base-test",
      "filter": {
        "include": {
          "label": "^integration$"
        }
      }
    },
    {
      "name": "performance",
      "displayName": "Performance Tests",
      "description": "Run performance tests only",
      "configurePreset": "default",
      "inherits": "base-test",
      "filter": {
        "include": {
          "label": "^performance$"
        }
      }
    },
    {
      "name": "github-unit",
      "displayName": "Unit Tests (GitHub CI)",
      "description": "Run unit tests in GitHub CI environment",
      "configurePreset": "github",
      "inherits": "base-test",
      "filter": {
        "include": {
          "label": "^unit$"
        }
      }
    },
    {
      "name": "github-integration",
      "displayName": "Integration Tests (GitHub CI)",
      "description": "Run integration tests in GitHub CI environment",
      "configurePreset": "github",
      "inherits": "base-test",
      "filter": {
        "include": {
          "label": "^integration$"
        }
      }
    },
    {
      "name": "github-performance",
      "displayName": "Performance Tests (GitHub CI)",
      "description": "Run performance tests in GitHub CI environment",
      "configurePreset": "github",
      "inherits": "base-test",
      "filter": {
        "include": {
          "label": "^performance$"
        }
      }
    }
  ]
}
