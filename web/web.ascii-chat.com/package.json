{
  "name": "web.ascii-chat.com",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "bash scripts/build.sh",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "wasm:build": "cd ../.. cmake --build build --target mirror-web client-web",
    "wasm:build:mirror": "cd ../.. && cmake --build build --target mirror-web",
    "wasm:build:client": "cd ../.. && cmake --build build --target client-web",
    "wasm:watch": "nodemon --watch ../../../lib --watch ../../../src/web -e c,h --exec 'bun run wasm:build'",
    "wasm:clean": "rm -rf src/wasm/dist",
    "prebuild": "[ -z \"${VERCEL+x}\" ] && x=0 || x=1; ([ \"$x\" -eq \"1\" ] && exit 0) || cd ../.. && ls build 2>/dev/null 1>&2 || cmake --preset default -B build"
  },
  "dependencies": {
    "@ascii-chat/shared": "workspace:*",
    "@headlessui/react": "^2.2.9",
    "@pablo-lion/xterm-react": "^1.1.2",
    "@vercel/analytics": "^1.6.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "hls.js": "^1.6.15",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-helmet-async": "^2.0.5",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.56.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.3.1",
    "vite-plugin-sitemap": "^0.8.2",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  }
}
