{
  "type": "module",
  "name": "ascii-chat-web",
  "private": true,
  "workspaces": [
    "packages/*",
    "ascii-chat.com",
    "discovery.ascii-chat.com",
    "web.ascii-chat.com"
  ],
  "scripts": {
    "dev": "bun run --filter './ascii-chat.com' --filter './discovery.ascii-chat.com' --filter './web.ascii-chat.com' dev",
    "build": "bun run --filter '*' build",
    "build:shared": "bun run --filter '@ascii-chat/shared' build",
    "build:websites": "bun run --filter './ascii-chat.com' --filter './discovery.ascii-chat.com' --filter './web.ascii-chat.com' build",
    "type-check": "bun run --filter './ascii-chat.com' --filter './discovery.ascii-chat.com' --filter './web.ascii-chat.com' type-check",
    "lint": "bun run --filter './ascii-chat.com' --filter './discovery.ascii-chat.com' --filter './web.ascii-chat.com' lint",
    "format": "bun run --filter './ascii-chat.com' --filter './discovery.ascii-chat.com' --filter './web.ascii-chat.com' format",
    "format:check": "bun run --filter './ascii-chat.com' --filter './discovery.ascii-chat.com' --filter './web.ascii-chat.com' format:check",
    "build:sites": "bun run build:shared && bun run --filter './ascii-chat.com' --filter './discovery.ascii-chat.com' --filter './web.ascii-chat.com' build"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.55.0"
  }
}
