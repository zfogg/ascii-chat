{
  "name": "ascii-chat-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "wasm:build": "cd .. && cmake -B build-wasm -DCMAKE_TOOLCHAIN_FILE=cmake/toolchains/Emscripten.cmake && cmake --build build-wasm",
    "wasm:copy": "cp ../build-wasm/*.{js,wasm} public/wasm/ 2>/dev/null || true",
    "prebuild": "bun run wasm:build && bun run wasm:copy"
  },
  "dependencies": {
    "xterm": "^5.3.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@vercel/analytics": "^1.1.1",
    "hls.js": "^1.5.0"
  },
  "optionalDependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-legacy": "^5.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "terser": "^5.26.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
