{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure (CMake default preset)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--preset",
        "default"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "Build (CMake default Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "--preset",
        "default"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "focus": false
      },
      "dependsOrder": "sequence",
      "dependsOn": "Configure (CMake default preset)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    }
  ]
}

