# Makefile for Rate Limiter Example
CC = clang
CFLAGS = -Wall -Wextra -O3 -std=c23 -I../lib -D_GNU_SOURCE
LDFLAGS = -lm

SOURCES = rate_limiter.c rate_limiter_example.c
OBJECTS = $(SOURCES:.c=.o)
EXECUTABLE = rate_limiter_example

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(EXECUTABLE)

run: $(EXECUTABLE)
	./$(EXECUTABLE)

.PHONY: all clean run